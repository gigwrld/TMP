@startuml
class пользователь {
+ ФИО
+ эл.почта
+ номер телефона
+ пол
+ дата рождения
+ отправление запроса на аннулирование аккаунта ()
+ отправление запроса на создание аккаунта ()
+ отправление запроса на подключение к системе ()
+ отправление запроса на отключение от системы ()
}

class сообщение {
+ длина
+ содержание 
+ автор
}


class аккаунт {
+ никнейм
+ ФИО пользователя 
+ логин
- пароль
+ осуществление обмена сообщениями ()
}

class админ {
- статус
- полномочия
+ обработка запросов ()
+ регистрирование аккаунта ()
+ аннулирование аккаунта ()
}

class система {
- состояние системы
+ подключение пользователя ()
+ отключение пользователя ()
}

система <-- админ
система --o аккаунт
пользователь <|-- аккаунт
аккаунт --> сообщение
админ --> аккаунт
пользователь --> система 

@enduml
